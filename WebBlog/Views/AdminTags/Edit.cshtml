@model WebBlog.Models.Domain.Tag

@{
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1> Edit Tag - Only Admin</h1>
    </div>
</div>

<div class="container py-5">
    @if (Model != null) 
    {
        <form method="post">
            <div class="mb-3 form-group">
                <label class="form-label">Id</label>
                <input type="text" class="form-control" id="id" asp-for="Id" readonly />
            </div>

            <div class="mb-3 form-group">
                <label asp-for="Name" class="form-label">Name</label>
                <input asp-for="Name" type="text" class="form-control" id="name" required/>
            </div>

            <div class="mb-3 form-group">
                <label asp-for="DisplayName" class="form-label">Display Name</label>
                <input asp-for="DisplayName" type="text" class="form-control" id="displayName" required/>
            </div>

            <div class="mb-3 form-group">
                <div class="d-flex">
                    <button type="submit" class="btn btn-dark">Update</button>
                    <button type="submit" class="btn btn-danger ms-2" asp-area="" asp-controller="AdminTags" asp-action="Delete">Delete</button>
                </div>
            </div>
        </form>

    }
    else 
    {
        <p>Tag not found</p>
    }
</div>
