@{
    ViewData["Title"] = "List";
}



@await Component.InvokeAsync("List",
                 new {
                     indexPage =  ViewData["indexPage"]}
)


@section Scripts{
    <script language="javascript" type="text/javascript">
        $(document).ready(function () {
            $(document).on("click", "#contentPager a[href]", function () {
                $.ajax({
                    url: $(this).attr("href"),
                    type: 'GET',
                    cache: false,
                    success: function (result) {
                        $('#content').html(result);
                    }
                });
                return false;
            });
        });
    </script>
}
