@model WebBlog.Models.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="container col-xxl-8 px-4 py-5">
    <div class="row align-items-center g-5 py-5">
        <div class="col-12 col-lg-6">
            <h1 class="display-5 fw-bold lh-1 mb-3">
                Web Blog - The Tech Blog
            </h1>
            <p class="lead">
                In Web Blog your are going to find blogs covering different topis like HTML, CSS, Javascript, ASP. NET, C#, React etc.
                If you want to read the latest blogs. Join to The Tech Blog.
            </p>
        </div>

        <div class="col-12 col-lg-6">
            <img src="https://images.pexels.com/photos/3653849/pexels-photo-3653849.jpeg?auto=compress&cs=tinysrgb&w=1600" 
            alt="Blog banner phto"
            class="d-block mx-lg-auto img-fluid " width="250"/>
        </div>
    </div>
</div>



<div class="container col-xxl-8 px-4 py-5">
    <div class="row g-5 py-5">
        <div class="col-12 col-lg-9">
            @if (Model != null && Model.BlogPosts.Any())
            {
                @foreach (var blogPost in Model.BlogPosts)
                {
                    <div class="mb-5 bg-light box-shadow p-5" width="100%">
                        <img src="@blogPost.ImageUrl" alt="@blogPost.Heading" 
                            class="mb-2 d-block img-fluid"/>
                        <h2 class="mb-4">@blogPost.Heading</h2>
                        <p class="mb-4">
                            Author: @blogPost.Author
                            <br/>
                            Published Date: @blogPost.PublishedDate.ToShortDateString()
                        </p>
                        <p class="mb-4">
                            @foreach (var tag in blogPost.Tags)
                            {
                                <span class="badge bg-primary me-2">@tag.Name</span>
                            }
                        </p>
                        @if (@blogPost.ShortDescription.Length > 300)
                        {
                            @*TODO: Link to read the full posts*@
                            <p class="mb-4">@blogPost.ShortDescription.Substring(0, 300 - 1)... <a class="link"asp-area="" asp-controller="Blogs" asp-action="Index" asp-route-urlHandle="@blogPost.UrlHandle">Read More</a></p>
                        }
                        else
                        {
                            <p class="mb-4">@blogPost.ShortDescription</p>
                        }

                        <a class="btn btn-dark" asp-area="" asp-controller="Blogs" asp-action="Index" asp-route-urlHandle="@blogPost.UrlHandle">Read More</a>
                        <form class="number-comments" method="POST">
                            <input type="hidden" id="BlogPosts" value="@blogPost.UrlHandle">
                            <button class="btn mt-4" type="submit" d-block mt-4" >Comments: @blogPost.TotalComments</button>
                        </form>
                        
                        <div id="@blogPost.Id"></div>
                    </div>
                }
            }
        </div>
        <div class="col-12 col-lg-3">
            @if (Model != null && Model.BlogPosts.Any())
            {
                <h3 class="mb-4">Categories</h3>
                <ul class="list-group mb-5">
                    @foreach (var tag in Model.Tags)
                    {
                        <li class="list-group-item">
                            <a class="" asp-area="" asp-controller="" asp-action="" asp-route-urlHandle="">
                                @*@tag.Name*@
                                @Html.ActionLink(tag.Name, "Index", "Home", new {category = tag.Name})
                            </a>
                        
                        </li>
                    }
                </ul>

                <h3 class="mb-4">Authors</h3>
                <ul class="list-group">
                    @*TODO: Añadir Authors*@
                    @*@foreach (var blogPost in Model.BlogPosts)
                    {
                        <li class="list-group-item">
                            <a class="" asp-area="" asp-controller="" asp-action="" asp-route-urlHandle="">
                                Hola
                            </a>

                        </li>
                    }*@
                </ul>
            }
            else
            {
                <h3 class="mb-4">Categories</h3>
                <ul class="list-group">
                    @foreach (var tag in Model.Tags)
                    {
                        <li class="list-group-item">
                            <p class="mb-4">No tags found</p>
                        </li>
                    }
                </ul>

                <h3 class="mb-4">Authors</h3>
                <ul class="list-group">
                    @foreach (var tag in Model.Tags)
                    {
                        <li class="list-group-item">
                            <p class="mb-4">No authors found</p>
                        </li>
                    }
                </ul>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.number-comments').submit(function (event) {
                event.preventDefault(); // Prevent the form from submitting normally

                // Get the form data
                var formData = {
                    Id: $('#BlogPosts').val(),
                };
                
                // Make the AJAX call
                $.ajax({
                    url: '@Url.Action("GetComments", "Home")', // Replace "ControllerName" with the actual name of your controller
                    type: 'POST',
                    data: formData,
                    success: function (data) {
                        // Handle the successful response
                        console.log(data);

                        $(`#${formData.Id}`).append(` <div class="card">
                                        <div class="card-header">
                                            <h5>Comments</h5>

                                            <form id="comment-form" method="post">
                                                <div class="mb-3">
                                                    <label class="form-label">Email</label>
                                                    <input type="email" class="form-control" id="Email" asp-for="Email" />
                                                </div>
                                                <div class="mb-3">
                                                    <label class="form-label">Description</label>
                                                    <textarea class="form-control" id="CommentDescription" asp-for="CommentDescription" maxlength="200"></textarea>
                                                </div>

                                                <div class="">
                                                    <button type="submit" class="btn btn-dark">Submit</button>
                                                    <input type="hidden" id="Id" asp-for="Id" />
                                                    <input type="hidden" id="UrlHandle" asp-for="UrlHandle" />
                                                </div>
                                            </form>
                                        </div>
                                        <div class="card-body">
                                            <div id="${formData.Id}-display">

                                            </div>
                                        </div>
                                    </div>
                                </div>`);
                        for (var comment of data) {
                            $(`#${formData.Id}-display`).append(`
                                                     <div class="card mb-3">
                                                        <div class="card-body">
                                                            <div>${comment.description}</div>
                                                            <div class="d-flex justify-content-between">
                                                                <span class="text-secondary">${comment.email}</span>
                                                                <span class="text-secondary">${comment.dateAdded}</span>
                                                            </div>
                                                        </div>
                                                    </div>
                                        `);
                        }
                    },
                    error: function () {
                        // Handle any errors
                        alert('Error occurred while submitting the comment.');
                    }
                });
            });
        });
    </script>
}